https://leetcode.com/problems/majority-element/




class Solution {
public:
    int majorityElement(vector<int>& nums) {
        int ans;
        if(nums.size() == 1) {
            return nums[0];
        }
        sort(nums.begin(), nums.end());
        int maxi = nums.size()/2;
        int cnt = 1;
        for(int i = 0; i < nums.size() - 1; i++) {
            if(nums[i] == nums[i+1]) {
                cnt++;
                maxi = max(maxi, cnt);
            }
            else {
                cnt = 0;
            }
            if(cnt == maxi) {
                ans = nums[i];
            }
        }
        return ans;
    }
};
