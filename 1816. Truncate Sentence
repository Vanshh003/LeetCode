https://leetcode.com/problems/truncate-sentence/




class Solution {
    public:
        string truncateSentence(string s, int k) {
            string ans;
            int count = 0;
            for(auto i : s) {
                if(i == ' ') {
                    count++;
                    if(count == k) {
                        break;
                    }
                }
                ans += i;
            }
            return ans;
        }
};   
